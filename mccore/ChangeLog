	* lib/zfstream.h, lib/zfilebuf.h, lib/zfilebuf.cc, lib/zfPdbstream.h, lib/zfBinstream.h, lib/sockbuf.h, lib/sockbuf.cc, lib/sBinstream.h, lib/fPdbstream.h, lib/fBinstream.h, lib/ServerSocket.h, lib/ServerSocket.cc, lib/ResidueTypeImp.h, lib/ResidueTypeImp.cc, lib/ResidueType.h, lib/Pdbstream.h, lib/Pdbstream.cc, lib/McCore.h, lib/McCore.cc, lib/Makefile.in, lib/CTransfo.h, lib/CTransfo.cc, lib/CResidue.h, lib/CResidue.cc, lib/CResIdSet.h, lib/CResIdSet.cc, lib/CResId.h, lib/CResId.cc, lib/CPoint3D.h, lib/CPoint3D.cc, lib/CModel.h, lib/CModel.cc, lib/CMessageQueue.h, lib/CMessageQueue.cc, lib/CHBond.h, lib/CHBond.cc, lib/CGraph.h, lib/CException.h, lib/CException.cc, lib/CAtom.h, lib/CAtom.cc, lib/Binstream.h, lib/Binstream.cc, lib/AtomTypeImp.h, lib/AtomTypeImp.cc, lib/AtomType.h, lib/Algo.h, lib/Algo.cc, configure.in, COPYING:
