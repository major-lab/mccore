	* lib/zstream.h, lib/zstream.cc, lib/Vector3D.h, lib/Vector3D.cc, lib/UndirectedGraph.h, lib/TypeRepresentationTables.h, lib/SymmetricalMatrix.h, lib/stlio.h, lib/SqlReader.h, lib/SqlReader.cc, lib/SqlExtrac.h, lib/SqlExtrac.cc, lib/sockstream.h, lib/sockstream.cc, lib/SocketCommand.h, lib/ServerSocket.h, lib/ServerSocket.cc, lib/Sequence.h, lib/Sequence.cc, lib/RnamlWriter.h, lib/RnamlWriter.cc, lib/RnamlReader.h, lib/RnamlReader.cc, lib/Rmsd.h, lib/Rmsd.cc, lib/ResidueTypeStore.h, lib/ResidueTypeStore.cc, lib/ResidueType.h, lib/ResidueType.cc, lib/ResidueTopology.h, lib/ResidueTopology.cc, lib/Residue.h, lib/ResidueFactoryMethod.h, lib/ResidueFactoryMethod.cc, lib/Residue.cc, lib/ResIdSet.h, lib/ResIdSet.cc, lib/ResId.h, lib/ResId.cc, lib/Relation.h, lib/Relation.cc, lib/PropertyTypeStore.h, lib/PropertyTypeStore.cc, lib/PropertyType.h, lib/PropertyType.cc, lib/Pdbstream.h, lib/PdbFileHeader.h, lib/PdbFileHeader.cc, lib/Path.h, lib/PairingPattern.h, lib/PairingPattern.cc, lib/Molecule.h, lib/Molecule.cc, lib/Model.h, lib/Model.cc, lib/Messagestream.h, lib/Messagestream.cc, lib/MaximumFlowGraph.h, lib/Makefile.in, lib/HomogeneousTransfo.h, lib/HomogeneousTransfo.cc, lib/HBond.h, lib/HBond.cc, lib/Graph.h, lib/GraphAlgo.h, lib/Genbankstream.h, lib/Genbankstream.cc, lib/Fastastream.h, lib/Fastastream.cc, lib/ExtendedResidue.h, lib/ExtendedResidue.cc, lib/Exception.h, lib/Exception.cc, lib/Binstream.h, lib/AtomTypeStore.h, lib/AtomTypeStore.cc, lib/AtomType.h, lib/AtomType.cc, lib/AtomSet.h, lib/AtomSet.cc, lib/Atom.h, lib/Atom.cc, lib/Algo.h, lib/AdjacencyMatrix.h, lib/AbstractModel.h, lib/AbstractModel.cc, docs/Makefile.in, Makefile.in, configure.in, configure, config.h.in, ChangeLog:
